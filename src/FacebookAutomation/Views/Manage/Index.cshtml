@model IndexViewModel
@{
    ViewData["Title"] = "Gestion de compte";
}



<div>
    
</div>


<main class="site-main">

    <!-- Intro start //-->

    <section class="align-left">

        <div class="container">

            <div class="row">

                <h2>@ViewData["Title"].</h2>
                <p class="text-success">@ViewData["StatusMessage"]</p>

                <div class="col-lg-10 col-md-10 sm-margin-bottom-70 md-margin-bottom-70">




                    <h4>Modifier les paramètres de compte</h4>
                    <hr />
                    <dl class="dl-horizontal" style="font-size:large;">
                        <dt>Mot de passe :</dt>
                        <dd>
                            @if (Model.HasPassword)
            {
                                <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="ChangePassword">Modifier</a>&nbsp;&nbsp;]</text>
                            }
                            else
                            {
                                <text>[&nbsp;&nbsp;<a asp-controller="Manage" asp-action="SetPassword">Create</a>&nbsp;&nbsp;]</text>
                            }
                        </dd>
                        <dt>&nbsp;</dt>
                        <dd>&nbsp;</dd>
                        <dt>Gestion des licences:</dt>
                        <dd>
                            @Model.NbreLicence Licences a enregistrer @if (Model.NbreLicence > 0)
                            {<text>[<a asp-controller="Manage" asp-action="ValiderLicence" style="color:#c83650;">Enregistrer une licence</a>&nbsp;&nbsp;]</text>}
                        </dd>
                    </dl>

                    <p>&nbsp;</p>
                    <p>&nbsp;</p>
                    <p>&nbsp;</p>
                    <p>&nbsp;</p>

                    </div>
                </div>
            </div>
        </section>
    </main>

