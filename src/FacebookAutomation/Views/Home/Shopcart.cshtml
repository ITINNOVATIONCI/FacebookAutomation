<!-- Content start //-->

<main class="site-main">

    <!-- Intro start //-->

    <section>

        <div class="container">
            <form asp-controller="Home" asp-action="Paiement" method="post">
                <div class="row">

                    <div class="col-lg-4 col-md-4 margin-top--70">

                        <!-- Shipping start //-->

                        <aside class="widget">

                            <h2 class="widget-title">Information Client</h2>

                            <div class="widget-content">

                                <div class="form-elem form-elem-short">

                                    <label for="cart-info-nom">Nom * :</label>

                                    <input asp-for="Nom" type="text" required>

                                </div>

                                <div class="form-elem form-elem-short">

                                    <label for="cart-info-email">Email * :</label>

                                    <input asp-for="email" type="text" required>

                                </div>

                                <div class="form-elem form-elem-short">

                                    <label for="cart-info-numero">Numéro * :</label>

                                    <input asp-for="NumeroClient" type="text" required>

                                </div>

                                @*<div class="form-elem form-elem-short">

                                        <button class="biss-btn biss-btn-secondary"><i class="fa fa-check"></i> Apply</button>

                                    </div>*@

                            </div>

                        </aside>

                        <!-- Shipping end //-->
                        <!-- Promo start //-->
                        @*<aside class="widget">

                                <h2 class="widget-title">promocode</h2>

                                <div class="widget-content">

                                    <div class="form-elem form-elem-short">

                                        <label for="cart-shipping-promocode">Promocode:</label>

                                        <input type="text" name="cart-shipping-promocode" id="cart-shipping-promocode">

                                    </div>

                                    <div class="form-elem form-elem-short">

                                        <button class="biss-btn biss-btn-secondary"><i class="fa fa-check"></i> Apply</button>

                                    </div>

                                </div>

                            </aside>*@

                        <!-- Promo end //-->

                    </div>

                    <div class="clearfix hidden-lg hidden-md"></div>

                    <div class="col-lg-8 col-md-8 sm-margin-top-70 md-margin-top-70">

                        <div class="cart-in-cart">

                            <span>1 items</span> are in your shopping cart now.

                        </div>

                        <!-- Product table start //-->

                        <table class="cart-product-table">

                            <thead>

                                <tr>

                                    <th class="w1">#</th>

                                    <th class="w2">Item</th>

                                    <th class="w3">Price</th>

                                    <th class="w3">Qty</th>

                                    <th class="w3">Total</th>

                                </tr>

                            </thead>

                            <tbody>

                                <tr>

                                    <td class="w1">1</td>

                                    
                                    <td class="w2 title"><a href="#"><i class="fa fa-times remove"></i></a> <a href="#">@Model.produit.Description</a></td>

                                    <td class="w3 price"><span id="cart-table-price-1" data-val="@Model.produit.PrixVente">@Model.produit.PrixVente</span></td>

                                    <td class="w3 qty">

                                        <i class="fa fa-plus cart-table-change-qty" data-position="1"></i>

                                        <span id="cart-table-display-qty-1" data-qty="1">1</span>

                                        <i class="fa fa-minus cart-table-change-qty" data-position="1"></i>

                                        <!-- Qty of the product is here //-->
                                        <input asp-for="idProduit" type="hidden" value="@Model.produit.Id">
                                        <input asp-for="Quantite" type="hidden" id="cart-table-qty-1" value="1">

                                    </td>

                                    <td class="w3 total">

                                        <span id="cart-table-display-total-1">@Model.produit.PrixVente</span>

                                        <!-- Total price of the product is here //-->

                                        <input asp-for="Montant" type="hidden" id="cart-table-total-1" value="@Model.produit.PrixVente">

                                    </td>

                                </tr>

                            </tbody>

                        </table>

                        <!-- Product table end //-->
                        <!-- Totals start //-->

                        <aside class="widget">

                            <h2 class="widget-title">Commande totals</h2>

                            <div class="widget-content">

                                <ul class="cart-totals">

                                    @*<li><span class="sp1">Cart subtotals:</span> <span class="sp2">$1000.00</span></li>

                                        <li><span class="sp1">Shipping:</span> <span class="sp2">FREE</span></li>*@

                                    <li class="t"><span class="sp1">Total:</span> <span class="sp2" name="order-display-total" id="order-display-total">@Model.produit.PrixVente</span></li>
                                    <li><input type="hidden" asp-for="Total" class="sp2" id="order-total" value="@Model.produit.PrixVente" /></li>

                                </ul>

                                <p>

                                    <button class="biss-btn biss-btn-secondary margin-right-10" id="cart-update-cart"><i class="fa fa-refresh"></i> Annuler</button>

                                    <button class="biss-btn biss-btn-primary" id="cart-checkout">Valider Paiement <i class="fa fa-arrow-right"></i></button>

                                </p>

                            </div>

                        </aside>

                        <!-- Totals end //-->

                    </div>

                </div>
            </form>
        </div>

    </section>

    <!-- Intro end //-->

</main>

<!-- Content end //-->
